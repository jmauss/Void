#!/usr/bin/env bash

# Handle SIGTRAP signals sent by rbar
trap 'update' 5

# Set the seperator 
sep=" | "

stat()
{
    # Get volume
    vol="$(pulsemixer --get-volume | awk '{print $1}')"
    mute="$(pulsemixer --get-mute)"
    if [ $mute -eq 1 ]; then
        echo -e " OFF |"
    elif [ $vol -ge 0 ]; then
        echo -e " ${vol}% |"
    else
        echo -e "ERR"
    fi

    # Get IP address
    echo -ne "$(ip addr show enp0s25 | awk '$1 == "inet" {gsub(/\/.*$/, "", $2); print $2}')"

    echo -ne "$sep"

    # Get battery level
    battery="$(cat /sys/class/power_supply/BAT0/capacity)"
    if [ $battery -gt 95 ]; then
        echo -ne " ${battery}%"
    elif [ $battery -ge 75 ]; then
        echo -ne " ${battery}%"
    elif [ $battery -ge 50 ]; then
        echo -ne " ${battery}%"
    elif [ $battery -ge 25 ]; then
        echo -ne " ${battery}%"
    elif [ $battery -ge 0 ]; then
        echo -ne " ${battery}%"
    else
        echo -ne "ERR"
    fi

    echo -ne "$sep"

    # Get date and time
    echo -ne "$(date '+%a %b %-d | %-I:%M %p')"
}

update()
{
    # Use the stat function to set the statusbar
    xsetroot -name "$(stat)" &
    wait
}

while true; do
    update
    sleep 1m &
    wait
done
